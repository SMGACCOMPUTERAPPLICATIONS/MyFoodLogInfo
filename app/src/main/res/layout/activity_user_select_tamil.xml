

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserSelectTamil">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.SearchView
            android:background="@color/colorAccent"
            android:id="@+id/searchfoodtamil"
            app:defaultQueryHint="Search Your Foods Here"
            app:queryHint="Search Your Foods Here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.appcompat.widget.SearchView>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/searchfood"
            android:id="@+id/breakfastfoodlisttamil"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="120dp"
            android:layout_marginBottom="16dp">


            <Button
                style="@style/button_backgroud"
                android:text="அடுத்து"
                android:textStyle="bold"
                android:layout_below="@+id/userage"
                android:id="@+id/nextfood"
                ></Button>


        </LinearLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>